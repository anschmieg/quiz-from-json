<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/css/style.css">
    <!-- Google Material Icons (outlined) -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/katex.min.css" xintegrity="sha384-wcIxkf4k558fYv3mQP2rlAlYSEmgssgeOES8VlB+2sgU6PSoA2m2hFfLPhTTKALS" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/katex.min.js" xintegrity="sha384-hIoBPJpTUs74ddyc4bFZSM1YxFjUJe1NlMVbhmKhpkX2ZJ4YNf6U22pLsMYZAo5M" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/contrib/auto-render.min.js" xintegrity="sha384-43gviWU0YVjaDtb/GpZv7M1fvSJhX2M1opoIla3O8uL2v2jeC+uD4fnu2VLVoMcE" crossorigin="anonymous"></script>
</head>
<body>
    <header class="main-header">
        <nav class="main-nav">
            <div class="nav-section nav-left">
                <div class="quiz-selector">
                    <label for="quiz-select" class="quiz-label">Quiz:</label>
                    <select id="quiz-select" class="quiz-dropdown">
                        {% for quiz in quizzes %}
                        <option value="{{ quiz.id }}">{{ quiz.shorttitle }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="nav-section nav-center">
                <a href="/" class="nav-link" data-page="quiz">Quiz</a>
                <a href="/stats/" class="nav-link" data-page="stats">Stats</a>
            </div>
            <div class="nav-section nav-right">
                <button id="theme-toggle" class="theme-toggle" aria-label="Toggle dark mode">
                    <!-- Inline SVG fallbacks for theme icons. JS will toggle visibility by adding/removing the 'hidden' class. -->
                    <span class="theme-icon theme-icon-svg" aria-hidden="true">
                        <!-- Moon (dark mode) -->
                        <svg class="icon-moon" viewBox="0 0 24 24" width="20" height="20" fill="currentColor" aria-hidden="true">
                            <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
                        </svg>
                        <!-- Sun (light mode) - simpler reliable SVG: central circle + rays -->
                        <svg class="icon-sun" viewBox="0 0 24 24" width="20" height="20" aria-hidden="true" style="display:none;">
                            <g fill="currentColor" stroke="none">
                                <circle cx="12" cy="12" r="4" />
                                <rect x="11.5" y="1.5" width="1" height="3" rx="0.2" />
                                <rect x="11.5" y="19.5" width="1" height="3" rx="0.2" />
                                <rect x="1.5" y="11.5" width="3" height="1" rx="0.2" />
                                <rect x="19.5" y="11.5" width="3" height="1" rx="0.2" />
                                <rect x="4.2" y="4.2" width="1" height="3" transform="rotate(-45 4.7 5.7)" rx="0.2" />
                                <rect x="18.8" y="18.8" width="1" height="3" transform="rotate(-45 19.3 20.3)" rx="0.2" />
                                <rect x="18.8" y="4.2" width="1" height="3" transform="rotate(45 19.3 5.7)" rx="0.2" />
                                <rect x="4.2" y="18.8" width="1" height="3" transform="rotate(45 4.7 20.3)" rx="0.2" />
                            </g>
                        </svg>
                    </span>
                </button>
            </div>
        </nav>
    </header>
    <main class="main-container">
        {{ content | safe }}
    </main>
    <script>
        // Dark mode toggle functionality
        (function() {
            const themeToggle = document.getElementById('theme-toggle');
            const themeIcon = themeToggle.querySelector('.theme-icon');
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)');
            
            function setTheme(dark) {
                document.documentElement.setAttribute('data-theme', dark ? 'dark' : 'light');
                // Toggle inline SVGs visibility: show sun in light mode, moon in dark mode
                const sun = themeIcon.querySelector('.icon-sun');
                const moon = themeIcon.querySelector('.icon-moon');
                if (sun && moon) {
                    if (dark) {
                        sun.style.display = 'none';
                        moon.style.display = '';
                    } else {
                        sun.style.display = '';
                        moon.style.display = 'none';
                    }
                }
                localStorage.setItem('theme', dark ? 'dark' : 'light');
            }
            
            // Initialize theme
            const savedTheme = localStorage.getItem('theme');
            const initialDark = savedTheme === 'dark' || (!savedTheme && prefersDark.matches);
            setTheme(initialDark);
            
            themeToggle.addEventListener('click', () => {
                const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
                setTheme(!isDark);
            });
        })();
    </script>
</body>
</html>

