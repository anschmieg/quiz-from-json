<div class="quiz-container">
    <div id="stats-panel" class="stats-panel">
        
        <div class="stats-section">
            <h2>Session Stats</h2>
            <div id="session-stats-content">
                <p><strong>Accuracy:</strong> <span id="session-accuracy-val">-</span></p>
                <div class="progress-bar-container"><div class="progress-bar" id="session-accuracy-bar"></div></div>
                <p><strong>Improvement Trend:</strong> <span id="overall-improvement">-</span></p>
            </div>
        </div>

        <div class="stats-section">
            <h2>Overall Mastery</h2>
            <div id="mastery-stats-content">
                <p><strong>Mastered:</strong> <span id="mastery-accuracy-val">-</span></p>
                <div class="progress-bar-container"><div class="progress-bar" id="mastery-accuracy-bar"></div></div>
            </div>
        </div>

        <!-- This entire section will now be hidden if there's no history -->
        <div class="stats-section" id="current-question-stats-container">
            <h2>Current Question</h2>
            <div id="current-question-stats-content">
                <!-- Content is generated by JS -->
            </div>
        </div>

        <button id="reset-progress" class="reset-btn">Reset Progress</button>
    </div>

    <div id="quiz-area" class="quiz-area">
        <h1 id="quiz-title">Loading Quiz...</h1>
        <div id="flashcard-container">
            <!-- JavaScript will inject the current question here -->
        </div>
        <div id="quiz-complete-message" class="quiz-complete" style="display: none;">
            <h2>ðŸŽ‰ Well Done!</h2>
            <p>You've mastered all the questions. You can reset your progress to start again.</p>
        </div>
    </div>
</div>

